@model TaskManager.Models.DTO.TaskDto

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Task</h2>

<h4>Are you sure you want to delete this task?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Task</dt>
        <dd class="col-sm-10">@Model.TaskDescription</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Closure Date</dt>
        <dd class="col-sm-10">@Model.ExpectedClosureDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Assigned To</dt>
        <dd class="col-sm-10">@Model.AssignedTo</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.CompletionStatus</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
